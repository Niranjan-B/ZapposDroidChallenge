<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="imgViewStyleStateChangeMainActivity">
        <item name="android:layout_width">@dimen/img_view_dimens_main_activity</item>
        <item name="android:layout_height">@dimen/img_view_dimens_main_activity</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">@dimen/img_view_margintop_main_activity</item>
    </style>

    <style name="textViewDiscountStyleProductCard">
        <item name="android:textColor">#4fbf2a</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textViewStrikeThroughProductCard">
        <item name="android:textColor">#746f6f</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
